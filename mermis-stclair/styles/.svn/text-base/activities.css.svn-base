/************************************************************************************* * Stylesheet for activities.html *  * BakerSoftware 2007 ************************************************************************************/ div#menu { margin:10px 0 5px 0; }div#menu ul a{	font-size:13px;	line-height:15px;	color:black;	text-decoration:none;	cursor:pointer;}div#menu ul a:hover{	color:#003399;	text-decoration:underline}div#menu ul li{	display:inline;	padding:0 8px;	background:url(../images/seperator_colon.gif) center left no-repeat}div#menu ul li.first{	padding:0;	background:none}img#activityPic{	margin:5px 0;	height:300px;	visibility:hidden;}div.activityInfo{	display:none;	margin:0 10px}div.activityInfo p{	height:65px;	font-size:13.5px;	line-height:15px;	text-align:left;}div.pic{	width:430px;	height:280px;}