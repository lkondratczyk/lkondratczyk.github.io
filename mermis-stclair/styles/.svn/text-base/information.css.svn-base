/************************************************************************************* * Stylesheet for information.html *  * BakerSoftware 2007 ************************************************************************************/div#col1{	float:left;	margin-right:11px;	width:292px;}div#col2{	float:left;	width:292px;	text-align:center;}div#col2 span.dot{	padding:0 3px;	font-size:16px;	line-height:13px;	font-weight:bold;	color:#333;	vertical-align:middle;}div#links{	margin-bottom:10px;	padding:5px;	border:solid 1px #666;}a{	font-size:13px;	color:#336699;	text-decoration:underline;}a:hover{	font-size:13px;	color:black;	text-decoration:underline;}img{	display:block;	margin:5px 0;}table{	margin:15px 0;	padding:0;	width:100%;	font-family:Verdana, Arial, Helvetica, sans-serif;	font-size:11px;	border-collapse:collapse;	border:solid 1px #666;	background-color:white;}table th{	font-weight:bold;	color:#eee;	background-color:#1b2754;}table th, table td{	padding:3px 4px;	text-align: left;}table tr.zebra { background-color:#e9f9ff; }